<h2>Please log in</h2>
<%= form_for @user, url: '/signin' do |f| %>
    <%= f.label :name, "Your name:" %>
    <%= f.text_field :name %>

    <%= f.label :password, "Password:" %>
    <%= f.password_field :password, id: 'password' %>

    <%= f.submit "Sign in", class: "actions", id: 'Sign In' %>

<%end%>
<br>
or
<br>
<br>
<%= link_to "Sign Up", new_user_path %>
