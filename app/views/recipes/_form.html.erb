<h2>Add a recipe</h2>

<%= form_for @recipe do |f| %>
  <p>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </p>
  <br>
  <p>Recipe Items:</p>
  <%= f.fields_for :recipe_items do |i| %>
    <li>
      <%= i.label :quantity %>
      <%= i.text_field :quantity %>

      <%= i.label :unit %>
      <%= i.text_field :unit %>

      <%= i.label :ingredient %>
      <%= i.text_field :ingredient %>
    </li>
  <%end%>

  <p>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  </p>
  <p>
  <%= f.label 'Times made' %>
  <%= f.number_field :makes %>
  </p>
  <p>
  <%= f.label :comments %>
  <%= f.text_area :comments %>
  </p>
  <%= f.submit %>
<%end%>
