<p id="notice"><%= notice %></p>

<% if @message %>
  <div class="center alert">
    <p><%= @message%></p>
  </div>
<%end%>

<h2><%= @user.name + "'s Recipes" if @user %></h2>
<h2><%= "Recipe Index" if !@user %></h2>

<table>
  <tr>
    <th>Recipe</th>
    <th>Serves</th>
    <th>Ingredient</th>
    <th>Ingredient</th>
    <th>Ingredient</th>
    <th>Ingredient</th>
    <th>Ingredient</th>
    <th>Rating</th>
    <th>Times Made</th>
  </tr>
  <% @recipes.each do |recipe| %>
  <tr>
    <td><%= link_to recipe.name, recipe_path(recipe) %></td>
    <td><%= recipe.serves %></td>
    <% recipe.items.each do |item| %>
    <td><%= item.output %></td>
    <%end%>
    <td><%= recipe.rating %></td>
    <td><%= recipe.makes %></td>
  </tr>
  <%end%>
</table>
<br>
<p><%= link_to 'Add a new recipe', new_recipe_path if @user %></p>
<p><%= link_to "Return to home page", root_path %></p>
<p><%= link_to 'Log out', signout_path, :method => :delete %></p>
